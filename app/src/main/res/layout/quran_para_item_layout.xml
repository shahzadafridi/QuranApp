<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/para_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_8sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingRight="@dimen/_8sdp"
    android:paddingBottom="@dimen/_10sdp">

    <FrameLayout
        android:id="@+id/para_item_layout_img_cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/para_item_layout_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_155sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/quran_logo_150" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_affect_para_item_bg"
            android:elevation="@dimen/_10sdp" />

    </FrameLayout>

    <TextView
        android:id="@+id/para_item_layout_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/_8sdp"
        android:text=""
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_24ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



