<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_item_title_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/safa_item_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_46sdp"
        android:layout_alignParentRight="true"
        android:src="@drawable/quran_safa_con" />

    <TextView
        android:id="@+id/safa_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_toLeftOf="@+id/safa_item_image"
        android:fontFamily="@font/poppins_regular"
        android:gravity="right"
        android:paddingRight="@dimen/_16sdp"
        android:text="10 صفحہ"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/safa_item_image"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="#4D000000" />

</RelativeLayout>
